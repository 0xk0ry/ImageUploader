generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id       String  @id @default(uuid())
  caption  String? @db.VarChar(2200)
  imageUrl String
  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
}