{
  "compilerOptions": {
    "target": "ES2022",                          /* Modern Node.js versions support this */
    "module": "NodeNext",                        /* Best for modern ESM or CJS */
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "rootDir": "./src",                          /* Where your TS code lives */
    "outDir": "./dist",                         /* Where your compiled JS goes */
    "esModuleInterop": true,                     /* For compatibility with older packages */
    "forceConsistentCasingInFileNames": true,
    "strict": true,                              /* Enable all strict type-checking */
    "skipLibCheck": true,                        /* Speeds up compilation */
    "sourceMap": true,                           /* Helps with debugging in production */
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}