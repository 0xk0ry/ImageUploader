generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  username      String   @unique
  passwordHash  String
  fullName      String?
  bio           String?  @db.VarChar(150)
  profilePicUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([username])
}